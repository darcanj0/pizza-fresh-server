//snake case is being used in prisma and in postgres

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model table {
  id     String @id @default(uuid())
  number Int    @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model user {
  id        String @id @default(uuid())
  email     String @unique
  user_name String
  password  String
  image     String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model product {
  id          String @id @default(uuid())
  title       String @unique
  description String
  price       Float
  image       String

  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
